{
  "name": "searchcraft-javascript-sdks",
  "version": "0.1.0",
  "description": "The monorepo encompassing the SearchCraft SDKs.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/madebychalk/searchcraft-javascript-sdks.git"
  },
  "author": "Searchcraft",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/core-sdk",
    "packages/react-sdk",
    "packages/javascript-sdk"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.1"
  },
  "scripts": {
    "build:core": "yarn workspace @searchcraft/core build",
    "build:sdk-react": "yarn build:core && yarn workspace @searchcraft/react-sdk build",
    "build:sdk-javascript": "yarn build:core && yarn workspace @searchcraft/javascript-sdk build",
    "test": "yarn test:core && yarn test:react-sdk && yarn test:javascript-sdk",
    "test:core": "yarn workspace @searchcraft/core test",
    "test:sdk-react": "yarn workspace @searchcraft/react-sdk test",
    "test:sdk-javascript": "yarn workspace @searchcraft/javascript-sdk test"
  },
  "bugs": {
    "url": "https://bitbucket.org/madebychalk/searchcraft-javascript-sdks/issues"
  },
  "homepage": "https://bitbucket.org/madebychalk/searchcraft-javascript-sdks#readme"
}
