{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx", // Still set for React
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client"] // Add Vite types
  },
  "include": [
    "./.storybook",
    "./stories",
    "examples",
    "stories/utils/DefaultSearchcraftConfig.ts",
    "stories/utils/WebComponentWrapper.tsx",
    "utils"
  ],
  "exclude": ["node_modules", "dist"]
}
