{
  "name": "@searchcraft/react-sdk",
  "private": false,
  "author": "Searchcraft Inc.",
  "version": "0.10.5",
  "description": "Searchcraft React SDK.",
  "type": "module",
  "license": "Apache-2.0",
  "keywords": [
    "searchcraft"
  ],
  "scripts": {
    "build": "rm -rf dist && vite build --config vite.client.config.ts && vite build --config vite.server.config.ts",
    "docs": "typedoc --options typedoc.json",
    "lint": "biome format lint ./src",
    "test": "vitest --watch=false",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/madebychalk/searchcraft-javascript-sdks/"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "main": "dist/client/index.js",
  "module": "dist/client/index.js",
  "types": "dist/client/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./themes/*.css": "./dist/client/themes/*.css"
  },
  "dependencies": {
    "@searchcraft/javascript-sdk": "^0.10.5",
    "classnames": "^2.3.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0 <19.1.0",
    "react-dom": ">=18.0.0 <19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.25",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "jsdom": "^24.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.56.1"
  }
}
