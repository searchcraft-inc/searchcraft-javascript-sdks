{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"]
    },
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src", "vite.config.ts"],
  "typedocOptions": {
    "plugin": ["typedoc-plugin-markdown"],
    "entryPoints": [
      "src/components/SearchcraftAutoSearchForm/index.tsx",
      "src/components/SearchcraftBaseSearchForm/index.tsx",
      "src/components/SearchcraftBaseSearchResult/index.tsx",
      "src/components/SearchcraftBaseSearchResults/index.tsx",
      "src/components/SearchcraftButton/index.tsx",
      "src/components/SearchcraftErrorMessage/index.tsx",
      "src/components/SearchcraftFacetList/index.tsx",
      "src/components/SearchcraftFilterPanel/index.tsx",
      "src/components/SearchcraftInput/index.tsx",
      "src/components/SearchcraftInputLabel/index.tsx",
      "src/components/SearchcraftResultsInfo/index.tsx",
      "src/components/SearchcraftSlider/index.tsx",
      "src/components/SearchcraftSpinnerDark/index.tsx",
      "src/components/SearchcraftSpinnerLight/index.tsx",
      "src/components/SearchcraftToggleButton/index.tsx"
    ],
    "out": "docs"
  }
}
