{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"]
    },
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src", "vite.config.ts"],
  "typedocOptions": {
    "plugin": ["typedoc-plugin-markdown"],
    "entryPoints": ["src/index.tsx"],
    "out": "docs"
  }
}
