{
  "compilerOptions": {
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "noEmit": false,
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@store": ["store/index.ts"],
      "@utils": ["utils/index.ts"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules", "post-build.js"],
  "extends": "../../tsconfig.json",
  "include": ["src", "package.json", "post-build.js"]
}
