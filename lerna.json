{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.11.1",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": "version-*",
      "message": "Increment versions for %v",
      "updateInternalDependencies": "patch"
    },
    "publish": {
      "ignoreChanges": ["*.md"]
    }
  },
  "npmClient": "yarn"
}